<h1>Burgers!</h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each cats}}
    {{#unless this.yumyum}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="yumyum" value="true">
          <button type="submit">BURGER TIME!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.yumyum}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="yumyum" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="yumyum">Devour?</label><br>
    <input type="radio" name="yumyum" value="1" checked> Devour!<br>
    <input type="radio" name="yumyum" value="0"> Pass
  </div>

  <button type="submit">Add Burger</button>
</form>